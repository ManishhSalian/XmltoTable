@model List<(string Element, string Description)>

@{
    ViewBag.Title = "Filtered XML Data";
}

<h1>Filtered XML Data</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Element</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Element</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>
